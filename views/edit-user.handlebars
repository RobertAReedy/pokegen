<div class="container padded-div">
    <div class="row justify-content-center">
        <div class="card login-card p-2 m-2 rounded">
            <div class="card-body">
                <h2 class="">Edit-User</h2>
                <form class="login-form">
                    <div class="form-group">
                        <label for="username-login">Username</label>
                        <input type="username" id="username-login" value="{{users.username}}"/>
                    </div>
                    <div class="form-group">
                        <label for="password-login">Password</label>
                        <input type="password" id="password-login" value="{{users.password}}"/>
                    </div>
                    <div>
                        <button type="submit" class="btn btn-primary">Save</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>


<script src="/javascript/edit-user.js"></script>